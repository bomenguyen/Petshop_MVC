@model Petshop.Areas.Administrator.Models.DANHMUC

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<h2>Tạo loại mới</h2>


<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "ProductType")
</div>
@using (Html.BeginForm("Create", "ProductType", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            <h1> @ViewBag.CreateTypeError</h1>
        </div>
        <div class="form-group col-lg-5">
            <label>Tên danh mục</label>
            @Html.DropDownListFor(model => model.MaPL, ViewBag.cateListCreate as SelectList, new { @class = "form-control" })
            <label>Tên loại</label>
            @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên loại..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TenDM)</div>
            <br />
            <input type="submit" value="Tạo mới" class="alert alert-success" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>