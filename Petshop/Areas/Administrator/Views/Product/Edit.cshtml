@model Petshop.Areas.Administrator.Models.THONGTIN_PET
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật thông tin thú cưng</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Product")
</div>
@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaP)
        <div class="text-success">
            @ViewBag.EditProError
        </div>
        <div class="form-group col-lg-5">
            <label>Tên thú cưng</label>
            @Html.EditorFor(model => model.TenP, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên thú cưng..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TenP)</div>
            <label>Loại</label>
            @Html.DropDownListFor(model => model.MaDM, ViewBag.pdcListEdit as SelectList, new { @class = "form-control" })

            <label>Xuất xứ</label>
            @Html.DropDownListFor(model => model.MaNCC, ViewBag.typeListEdit as SelectList, new { @class = "form-control" })

            <label>Đơn giá</label>
            @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập đơn giá sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Giaban)</div>

            <label>Hình ảnh</label>
            <input type="file" id="file" name="file" />
            @Html.HiddenFor(model => model.ANH)

            <label>Mô tả</label>
            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.MoTa)</div>
            <br />
            <input type="submit" value="Cập nhật" class="alert alert-success" />
        </div>
    </div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
