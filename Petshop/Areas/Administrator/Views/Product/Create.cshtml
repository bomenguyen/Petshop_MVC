@model Petshop.Areas.Administrator.Models.THONGTIN_PET
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Tạo sản phẩm mới</h2>
<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Product")
</div>
@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            <h1> @ViewBag.CreateProError</h1>
        </div>
        <div class="form-group col-lg-5">
            <label>Mã Pet</label>
            @Html.EditorFor(model => model.MaP, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.MaP)</div>

            <label>Loại</label>
            @Html.DropDownListFor(model => model.MaDM, ViewBag.typeListCreate as SelectList, new { @class = "form-control" })

            <label>Xuất xứ</label>
            @Html.DropDownListFor(model => model.MaNCC, ViewBag.pdcListCreate as SelectList, new { @class = "form-control" })

            <label>Tên sản phẩm</label>
            @Html.EditorFor(model => model.TenP, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TenP)</div>

            <label>Đơn giá</label>
            @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập đơn giá sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Giaban)</div>

            <label>Hình ảnh</label>
            <input type="file" id="file" name="file" />
            <div class="text-danger">@ViewBag.HinhAnh</div>

            <label>Mô tả</label>
            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.MoTa)</div>
            <br />
            <input type="submit" value="Tạo mới" class="alert alert-success" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

