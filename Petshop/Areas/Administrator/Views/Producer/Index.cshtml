@model IEnumerable<Petshop.Areas.Administrator.Models.NCC>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>NƠI CUNG CẤP</h2>
<div class="text-warning">
    @ViewBag.PdcError
</div>
<hr />
<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "Producer")" role="button">Tạo nơi cung cấp mới</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã nhà CC</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Địa chỉ</th>
                            <th>Điện thoại</th> 
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaNCC)</td>
                                <td>@Html.DisplayFor(modelItem => item.TeNNCC)</td>
                                <td>@Html.DisplayFor(modelItem => item.DIACHI)</td>
                                <td>@Html.DisplayFor(modelItem => item.DIENTHOAI)</td>
                               
                                <td>
                                    <a href="@Url.Action("Edit", "Producer", new { id = item.MaNCC})"><i class="fa fa-pencil fa-fw"></i></a>|
                                    <a onclick="return confirm('Bạn có chắc chắn muốn xoá hãng này?')" href="@Url.Action("Delete", "Producer", new { id = item.MaNCC })"><i class="fa fa-times fa-fw"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
