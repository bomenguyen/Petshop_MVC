@model Petshop.Areas.Administrator.Models.NCC
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}



<h2>Tạo hãng mới</h2>


<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Producer")
</div>
@using (Html.BeginForm("Create", "Producer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            @ViewBag.CreatePdcError
        </div>
        <div class="form-group col-lg-5">
            <label>Mã hãng</label>
            @Html.EditorFor(model => model.MaNCC, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã hãng..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.MaNCC)</div>
            <label>Tên hãng</label>
            @Html.EditorFor(model => model.TeNNCC, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên hãng..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TeNNCC)</div>

            <label>Số điện thoại</label>
            @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số điện thoại..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.DIENTHOAI)</div>

            <label>Địa chỉ</label>
            @Html.TextAreaFor(model => model.DIACHI, new { @class = "form-control", @placeholder = "Nhập địa chỉ..." })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.DIACHI)</div>


            <input type="submit" value="Tạo mới" class="btn btn-default" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>